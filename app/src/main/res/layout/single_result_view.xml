<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/single_view_margin"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:id="@+id/resultLayout"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.elth.care.myhealth.utils.CustomTextView
                android:id="@+id/displayTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/display_text_margin"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_bold_size" />

            <com.elth.care.myhealth.utils.CustomTextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/displayTextView"
                android:layout_margin="@dimen/text_margin"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="italic" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="70dp"
                android:layout_height="7dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:indeterminate="false"
                android:max="100" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
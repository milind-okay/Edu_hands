<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/review_item"
    android:background="@color/colorPrimary"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">



            <!-- the container view for the title and description -->
            <RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/relativeLayout">

                <!-- the title view -->
                <TextView android:id="@+id/authorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/my_tab"
                    android:layout_marginTop="@dimen/my_tab"
                    android:textAppearance="@android:style/TextAppearance.Medium" />

                <!-- the description view -->
                <TextView android:id="@+id/reviewText"
                    android:layout_below="@id/authorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="@dimen/my_tab"
                    android:textAppearance="@android:style/TextAppearance.Small" />


                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar2"
                    android:layout_below="@+id/reviewText"
                    android:layout_marginLeft="@dimen/ProfileRating"
                    android:numStars="5"
                    android:stepSize="0.1"
                    style="@style/RatingBar"
                    android:contextClickable="false"
                    android:clickable="false"
                    android:elevation="5dp" />


            </RelativeLayout>



</android.support.v7.widget.CardView>